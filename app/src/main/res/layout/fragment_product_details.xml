<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_detail_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:hint="This is a test description of an item or product"
        app:layout_constraintTop_toBottomOf="@id/iv_detail_image"
        app:layout_constraintStart_toStartOf="@id/iv_detail_image"
        />

    <TextView
        android:id="@+id/tv_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="$18.50"
        app:layout_constraintStart_toEndOf="@id/iv_detail_image"
        app:layout_constraintBottom_toTopOf="@id/tv_detail_description"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_detail_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Not Availabile"
        app:layout_constraintStart_toEndOf="@id/iv_detail_image"
        app:layout_constraintBottom_toTopOf="@id/tv_detail_description"/>


</androidx.constraintlayout.widget.ConstraintLayout>